{
  "manifest_version": 2,
  "name": "Pickero",
  "description": "Picks Color",
  "version": "1.0",
  "icons": {
    "16": "./assets/16.png",
    "24": "./assets/24.png",
    "32": "./assets/32.png",
    "48": "./assets/48.png",
    "128": "./assets/128.png"
  },
  "browser_action": {
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content/content.js"]
    }
  ],
  "background": {
    "scripts": ["./background/background.js"],
    "persistent": false
  },
  "permissions": [
    "background",
    "tabs",
    "<all_urls>",
    "activeTab",
    "storage",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}
