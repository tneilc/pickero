{
  "manifest_version": 2,
  "name": "Pickero",
  "description": "Helps you with picking color values from your browsers current tab. Eye drop button makes everything easy for you.",
  "version": "1.0.0",
  "icons": {
    "16": "./assets/16.png",
    "24": "./assets/24.png",
    "32": "./assets/32.png",
    "48": "./assets/48.png",
    "128": "./assets/128.png"
  },
  "browser_action": {
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content/content.js"]
    }
  ],
  "background": {
    "scripts": ["./background/background.js"],
    "persistent": false
  },
  "permissions": [
    "background",
    "activeTab",
    "storage"
  ]
}
